 ├── columns: name:4 id:1
 ├── cost: 54.7400001
 └── scan users@_hyp_1
      ├── columns: id:1 city:3!null name:4
      ├── constraint: /3/5
      │    ├── [/'chicago' - /'chicago']
      │    ├── [/'new york' - /'new york']
      │    └── [/'seattle' - /'seattle']
      └── cost: 54.4200001

CREATE TABLE users (id INT, i INT, city STRING, name STRING)
----

index-candidates
SELECT name, id FROM users WHERE city IN ('new york', 'chicago', 'seattle');
----
users:
 (city)

index-recommendations
SELECT name, id FROM users WHERE city IN ('new york', 'chicago', 'seattle');
----
index recommendations: 1
1. type: index creation
   SQL command: CREATE INDEX ON users (city) STORING (id, name);
--
Optimal Plan.
